\end{cases},
\]

\end_inset


\begin_inset Formula 
\[
\begin{cases}
\Psi_{n,m,e}\left(r_{0}sin\left(\theta\right)\right)-\Phi_{l,m}^{in}\left(r_{0}\right)=0\\
\frac{\partial\Psi_{n,m,e}\left(rsin\left(\theta\right)\right)}{\partial\left(rsin\left(\theta\right)\right)}sin\left(\theta\right)-\frac{\partial\Phi_{l,m}^{in}\left(r_{0}\right)}{\partial r}=0
\end{cases}\rightarrow\begin{cases}
\frac{\alpha_{m,n,e}}{\sqrt{2\pi c}}J_{m}\left(k_{\rho,n,e}r_{0}sin\left(\theta\right)\right)-\varsigma_{m,l,e}j_{m}\left(\alpha_{r,e}r_{0}\right)=0\\
\frac{\alpha_{m,n,e}}{\sqrt{2\pi c}}sin\left(\theta\right)\frac{\partial J_{m}\left(k_{\rho,n,e}r_{0}sin\left(\theta\right)\right)}{\partial r}-\varsigma_{m,l,e}\frac{\partial j_{m}\left(\alpha_{r,e}r_{0}\right)}{\partial r}=0
\end{cases}
\]

\end_inset

Учитывая, что 

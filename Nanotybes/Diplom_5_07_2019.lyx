\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{1}{r^{2}}\frac{\partial}{\partial r}\left(r{}^{2}\frac{\partial R_{Q}}{\partial r}\right)-\frac{l\left(l+1\right)R_{Q}}{r^{2}}+\frac{2m_{e}}{h^{2}}\left(E-U\right)R_{Q}=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{1}{r^{2}}\frac{\partial}{\partial r}\left(r{}^{2}\frac{\partial\Phi_{s}}{\partial r}\right)+\frac{1}{r^{2}sin\theta}\frac{\partial}{\partial\theta}\left(sin\theta\frac{\partial\Phi_{s}}{\partial\theta}\right)+\frac{1}{r^{2}sin^{2}\theta}\frac{\partial^{2}\Phi_{s}}{\partial\varphi^{2}}+\frac{2m}{h^{2}}E\Phi_{s}=0
\end{equation}

